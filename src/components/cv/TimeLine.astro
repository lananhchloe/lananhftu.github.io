---
const { title, subtitle } = Astro.props;
---

<div class="flex">
  <div class="education__time">
    <span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
    <span class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"></span>
  </div>
  <div class="experience__data bd-grid px-5">
    <h3 class="font-semibold mb-1">{title}</h3>
    <span class="font-light text-sm">{subtitle}</span>
    <p class="my-2 text-justify">
      <slot />
    </p>
  </div>
</div>

---
import TimeLine from '../components/cv/TimeLine.astro';
---

<section>
  <h2 class="text-2xl font-bold">Education</h2>

  <TimeLine 
    title="Bachelor of Economics" 
    subtitle="2018 – 2022 at University of Economics Ho Chi Minh City (UEH), Vietnam"
  >
    <p>
      Focused on macroeconomics, development economics, and quantitative methods. Graduated with honors and completed a thesis on monetary policy effectiveness in Vietnam.
    </p>
  </TimeLine>

  <TimeLine 
    title="Master of Public Policy" 
    subtitle="2023 – 2025 (expected) at Fulbright University Vietnam, Ho Chi Minh City"
  >
    <p>
      Specializing in economic policy and governance. Coursework includes policy evaluation, econometrics, and leadership in public service.
    </p>
  </TimeLine>
</section>


